	<style type="text/css">
		.Show
		{
			width: 530px;
			height: 630px;
		}

			.Show div
			{
				width: 213px;
				height: 327px;
				position: relative;
				left: 155px;
				top: 110px;
			}

			.Show:hover div
			{
				border: 2px solid #ccc;
			}

		.ValueGroup
		{
			width: 400px;
